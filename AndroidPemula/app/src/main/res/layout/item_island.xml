<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_ver_margin">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pict"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/activity_hor_margin"
        android:layout_marginRight="@dimen/activity_hor_margin"
        android:src="@drawable/jawa"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/pict"
        android:layout_toRightOf="@+id/pict"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nmPulau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/nama_pulau"/>
        <TextView
            android:id="@+id/sebutan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/sebutan"/>
    </LinearLayout>
</RelativeLayout>